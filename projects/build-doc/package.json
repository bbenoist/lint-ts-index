{
  "name": "@bb-tools/build-doc",
  "version": "0.1.0",
  "description": "Top-level project to build some documentation",
  "author": "Baptist BENOIST",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/bbenoist/node-tools",
    "type": "git"
  },
  "scripts": {
    "build": "rushx build:md",
    "build:md": "md-magic --path '**/*.md' --config .markdown-magic.js --ignore 'node_modules,temp,dist,.rush'",
    "clean": "",
    "lint": "rushx lint:eslint && rushx lint:prettier && rushx lint:dependencies",
    "lint:dependencies": "ts-node ./lint-dependencies.ts",
    "lint:eslint": "eslint .",
    "lint:prettier": "rushx lint:prettier:cli -l",
    "lint:fix": "rushx lint:eslint:fix && rushx lint:prettier:fix",
    "lint:eslint:fix": "rushx lint:eslint --fix",
    "lint:prettier:fix": "rushx lint:prettier:cli --write",
    "lint:prettier:cli": "prettier \"**/*.ts\" \"**/*.js\" --ignore-path ../.prettierignore -l",
    "rebuild": "",
    "test": ""
  },
  "devDependencies": {
    "@bb-tools/markdown-magic-utils": "workspace:*",
    "@bb-tools/dot-to-ascii": "workspace:*",
    "@bb-tools/types-spdx-license-ids": "workspace:*",
    "@lint-ts-index/core": "workspace:*",
    "@lint-ts-index/cli": "workspace:*",
    "@lint-ts-index/eslint-plugin": "workspace:*",
    "@lint-ts-index/examples": "workspace:*",
    "@lint-package-json/core": "workspace:*",
    "@lint-package-json/cli": "workspace:*",
    "@lint-package-json/eslint-plugin": "workspace:*",
    "@lint-package-json/examples": "workspace:*",
    "@rushstack/eslint-config": "~2.3.3",
    "eslint": "~7.23.0",
    "prettier": "~2.2.1",
    "typescript": "~4.2.4",
    "markdown-magic": "~2.0.0",
    "sync-rpc": "~1.3.6",
    "@types/node": "~14.14.37",
    "ts-node": "~9.1.1",
    "strip-json-comments": "~3.1.1"
  }
}
